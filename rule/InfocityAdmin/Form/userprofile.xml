<?xml version="1.0" encoding="windows-1251"?>
<rule type="form" id="userprofile" mode="on">
	<description></description>
	<xsltfile>forms/userprofile.xsl</xsltfile>
	<doctype>system</doctype>
	<title source="KEYWORD">Свойства пользователя</title>
	<outline>navigator</outline>
	<default>
	</default>
	<show>
		<field mode="on">
			<name>userid</name>
			<value source="docfield">userid</value>
		</field>
		<field mode="on">
			<name>shortname</name>
			<value source="docfield">shortname</value>
			<caption source="KEYWORD">Сокращенное имя</caption> 
		</field>
		<field mode="on">
			<name>fullname</name>
			<value source="docfield">fullname</value>
			<caption source="KEYWORD">Полное имя</caption>  
		</field>
		<field mode="on">
			<name>historyvis</name>
			<value source="docfield">historyvis</value>
		</field>
		<field mode="on" publishas="GLOSSARY">
			<name>post</name>
			<value source="docfield">postid</value>
			<caption source="KEYWORD">Должность</caption>
		</field>
		<field mode="on" publishas="DEPARTMENT">
			<name>department</name>
			<value source="docfield">depid</value>
			<caption source="KEYWORD">Департамент</caption>
		</field>
		
		<field mode="on">
			<name>email</name>
			<value source="docfield">email</value>
		</field>
		<field mode="on">
			<name>instmsgaddress</name>
			<value source="docfield">instmsgaddress</value>
		</field>
		<field mode="on">
			<name>skin</name>
			<value source="docfield">skin</value>
			<caption source="KEYWORD">Скин</caption>  
		</field>
		<field mode="on">
			<name>lang</name>
			<value source="docfield">lang</value>
			<caption source="KEYWORD">Язык интерфейса</caption> 
		</field>
		<field mode="on">
			<name>countdocinview</name>
			<value source="docfield">countdocinview</value>
			<caption source="KEYWORD">Количество документов в виде</caption> 
		</field>
		<field mode="on" publishas="GROUP">
			<name>groups</name>
			<value source="docfield">groups</value>
			<caption source="KEYWORD">Группы</caption>
		</field>
		<field mode="on" publishas="ROLE">
			<name>role</name>
			<value source="docfield">role</value>
			<caption source="KEYWORD">Роли</caption>
		</field>
		<field mode="on">
			<name>filter</name>
			<value source="macro">FILTER</value>
			<caption source="KEYWORD">Фильтры</caption>
		</field>
	</show>
	<save>
		<field mode="on">	
			<value source="webformfield">historyvis</value>
			<docfield>historyvis</docfield>				
		</field>
	</save>
	<caption name="close" source="KEYWORD">Закрыть</caption> 
	<caption name="saveandclose" source="KEYWORD">Сохранить и закрыть</caption> 
	<caption name="properties" source="KEYWORD">Свойства</caption> 
	<caption name="settings" source="KEYWORD">Настройки системы</caption> 
	<caption name="editing" source="KEYWORD">Редактирование</caption>
	<caption name="readonly" source="KEYWORD">Только для чтения</caption>
	<caption name="modenotdefined" source="KEYWORD">Режим не определен</caption>
	<caption name="oldpassword" source="KEYWORD">Старый пароль</caption>
	<caption name="newpassword" source="KEYWORD">Новый пароль</caption>
	<caption name="repeatnewpassword" source="KEYWORD">Повтор нового пароля</caption>
	<caption name="logout" source="KEYWORD">Завершить работу</caption>
	<caption name="lang" source="KEYWORD">Язык</caption>
 	<caption name="skin" source="KEYWORD">Оформление</caption>
 	<caption name="employer" source="KEYWORD">Сотрудник</caption>
 	<caption name="fio" source="KEYWORD">ФИО</caption>
 	<caption name="department" source="KEYWORD">Департамент</caption>
 	<caption name="post" source="KEYWORD">Должность</caption>
 	<caption name="chinese" source="KEYWORD">Китайский</caption>
	<glossary mode="on" id="langs" source="macro">AVAILABLE_LANGS</glossary>
	<glossary mode="on" id="skins" source="macro">AVAILABLE_SKINS</glossary>
</rule>
